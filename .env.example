OPENAI_API_KEY=

# Optional: override OpenAI-compatible base URL (e.g. OpenRouter https://openrouter.ai/api/v1)
OPENAI_BASE_URL=

# Optional: override model id (defaults to gpt-4o-mini)
# Example OpenRouter model: z-ai/glm-4.5-air:free
OPENAI_MODEL=

# Optional: API mode.
# - "chat": use `/chat/completions` (recommended for OpenRouter and most OpenAI-compatible providers)
# - "responses": use `/responses` (OpenAI Responses API)
OPENAI_API_MODE=

# Optional: extra headers (useful for OpenRouter attribution)
OPENAI_REFERER=
OPENAI_TITLE=

# Optional: sqlite file location
DB_PATH=data/app.sqlite
